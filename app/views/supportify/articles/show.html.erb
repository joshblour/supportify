<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @article.slug %>
</p>

<p>
  <strong>Locale:</strong>
  <%= @article.locale %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @article.published_at %>
</p>


<p>
  <strong>Tags:</strong>
  <%= @article.tags.to_sentence %>
</p>

<p>
  <strong>Categories:</strong>
  <%= @article.categories.to_sentence %>
</p>

<p>
  <strong>Admin Tags:</strong>
  <%= @article.admin_tags.to_sentence %>
</p>

<p>
  <strong>Author:</strong>
  <%= @article.author.send(Supportify.author_name_method) if @article.author %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body.html_safe if @article.body %>
</p>

